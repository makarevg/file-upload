{
	"compilerOptions": {
		"sourceMap": true,
		"target": "es6",
		"jsx": "react",
		"module": "esnext",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"declaration": false,
		"removeComments": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"strict": true,
		"lib": [
			"es2015",
			"es2016",
			"es2017",
			"es2018",
			"dom"
		],
		"baseUrl": "src",
		"paths": {

		},
		"typeRoots": [
			"node_modules/@types",
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
